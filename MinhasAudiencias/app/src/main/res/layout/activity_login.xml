<?xml version="1.0" encoding="utf-8"?>

<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundologin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pedropoiani.desenvolvimento.dispositivosii.minhasaudincias.Activity.RegistroActivity">


    <ProgressBar

        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />


    <ScrollView

        android:id="@+id/login_formulario2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:id="@+id/login_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="52dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/header_icon"
                    android:layout_width="@dimen/image_header_dimen"
                    android:layout_height="@dimen/image_header_dimen"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/image_header_top_margin"
                    android:src="@mipmap/ic_launcher_jus" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText

                        android:id="@+id/user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorText"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    app:passwordToggleTint="@color/colorText"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText

                        android:id="@+id/user_senha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Senha"
                        android:inputType="textPassword"
                        android:textColor="@color/minhaCor"
                        android:textStyle="normal"/>



                </android.support.design.widget.TextInputLayout>

                <Button


                    android:id="@+id/user_entrar"
                    style="?android:textAppearanceSmall"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/input_background"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Entrar"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/novo_cadastro"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="NÃ£o tem conta? Clique aqui para Registrar!"
                    android:textAlignment="center" />



            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>