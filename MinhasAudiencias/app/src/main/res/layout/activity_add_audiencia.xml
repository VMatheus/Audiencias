<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/ooo"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pedropoiani.desenvolvimento.dispositivosii.minhasaudincias.Activity.AddAudienciaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp">


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Numero do Processo:"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/adit_numeroprocesso"
            android:hint="Nº Processo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="phone" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Nome do Cliente:"
            android:layout_height="match_parent" />

        <EditText

            android:id="@+id/edit_nomecliente"
            android:hint="Nome Completo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="236dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Telefone do Cliente:"
            android:layout_height="match_parent" />

        <EditText

            android:id="@+id/edit_telefonedocliente"
            android:hint= "Ex: 01198700402"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"/>

    </LinearLayout>

        <ImageButton
            android:id="@+id/btm_ligarparacliente"
            android:layout_width="96dp"
            android:background="@color/trans"
            android:layout_height="match_parent"
            android:layout_weight="0.47"
            android:text="Ligar"
            app:srcCompat="@drawable/ic_android_phone" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Local da Audiência:"
            android:layout_height="match_parent" />

        <EditText

            android:id="@+id/edit_local"
            android:hint="Ex: 'Fórum', 'Vara do Trabalho' "
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text" />

        <EditText

            android:id="@+id/edit_localCidade"
            android:hint="Ex: São Paulo - SP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">


        <LinearLayout

            android:orientation="vertical"
            android:layout_width="236dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Data / Hora:"
                android:layout_height="match_parent" />

            <EditText

                android:id="@+id/edit_data"
                android:hint= "Ex: 23/10/2017"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:inputType="date"/>

        </LinearLayout>

        <EditText
            android:id="@+id/edit_hora"
            android:gravity="center"
            android:inputType="time"
            android:layout_width="wrap_content"
            android:hint="14:00"
            android:layout_height="76dp"
            android:layout_weight="0.84" />

    </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
